<div class="page-header">
  <h1>Login</h1>
</div>

{{#if errorMessage}}
  <div class="alert alert-danger">
    <strong>Login failed:</strong> {{errorMessage}}
  </div>
{{/if}}

{{! login form; the fields must be named "identification" and "password"; the controller action is "login" }}
<form {{action login on='submit'}}>
  <div class="form-group">
    <label for="identification">Login</label>
    {{input id='identification' value=identification placeholder='Enter Login' class='form-control'}}
  </div>
  <div class="form-group">
    <label for="password">Password</label>
    {{input id='password' type='password' value=password placeholder='Enter Password' class='form-control'}}
  </div>
  <button type="submit" class="btn btn-default">Login</button>
</form>
